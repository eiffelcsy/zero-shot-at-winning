# ChromaDB Configuration
CHROMA_API_KEY=
CHROMA_TENANT=
CHROMA_DATABASE=

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Postgres Configuration
# For Docker Compose (use service name 'db' as hostname):
PG_CONN_STRING=postgresql://postgres:yoursecretpassword@db:5432/zero_shot
# For local development (if running Postgres locally):
# PG_CONN_STRING=postgresql://postgres:yoursecretpassword@localhost:5432/zero_shot
DB_NAME=zero_shot

# PostgreSQL Database Credentials (used by Docker Compose)
POSTGRES_DB=zero_shot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=yoursecretpassword
PGDATA=/var/lib/postgresql/data/pgdata

API_BASE_URL=http://app:8000
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false